                  <div class="mt-auto flex justify-between">
                    <div class="flex items-center gap-2">
                      <div class="h-10 w-10 shrink-0 overflow-hidden rounded-full">
                        <%= image_tag avatar_url(question.user), class: "h-full w-full object-cover object-center" %>
                      </div>
                      <div>
                        <p class="block text-gray-500"><%= link_to question.user.name, user_path(question.user), class: "break-all" %> さん</p>
                      </div>
                    </div>
                  </div>
                  <div>
                    <p class="font-bold text-blue-600">
                    タイトル
                    <%= question.id %>
                    </p>
                    <p class="mb-2 text-lg font-semibold text-gray-800 line-clamp-1">
                    <%= question.question_title %>
                    </p>
                    <p class="font-bold text-blue-600">
                    質問内容
                    </p>
                    <p class="mb-8 text-gray-500 line-clamp-3">
