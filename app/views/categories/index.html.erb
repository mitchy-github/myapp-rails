<div class="mt-4 text-center">
  <h2 class="text-2xl font-bold text-gray-800 md:m-8 lg:text-3xl">ハッシュタグ一覧</h2>
</div>
<div class="m-5 py-6 sm:py-8 lg:py-12">
  <div class="p-4 mx-auto max-w-5xl rounded-lg border">
    <% @categories.each do |category| %>
        <%
            name = category["category"]
            count = category["count"]
            id = category["id"]
        %>
        <p class="mb-2 inline-flex">
            <%= link_to "##{name}(#{count})", category_path(id) %>
        </p>
    <% end %>
  </div>
</div>
